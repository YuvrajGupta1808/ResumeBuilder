{
    "name": "resume-builder",
    "version": "1.0.0",
    "description": "AI-powered resume builder with LaTeX support",
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "cd backend && npm run start:dev",
        "dev:frontend": "cd frontend && npm run dev",
        "build": "cd frontend && npm run build",
        "start": "cd frontend && npm start",
        "deploy:frontend": "cd frontend && npx vercel --prod",
        "lint": "npm run lint:frontend && npm run lint:backend",
        "lint:frontend": "cd frontend && npm run lint",
        "lint:backend": "cd backend && npm run lint",
        "install:all": "npm run install:frontend && npm run install:backend",
        "install:frontend": "cd frontend && npm install",
        "install:backend": "cd backend && npm install",
        "build:all": "npm run build:frontend && npm run build:backend",
        "build:frontend": "cd frontend && npm run build",
        "build:backend": "cd backend && npm run build",
        "test:all": "npm run test:frontend && npm run test:backend",
        "test:frontend": "cd frontend && npm run test",
        "test:backend": "cd backend && npm run test",
        "format:check": "npm run format:check:frontend && npm run format:check:backend",
        "format:check:frontend": "cd frontend && npm run format:check",
        "format:check:backend": "cd backend && npm run format:check",
        "format:all": "npm run format:frontend && npm run format:backend",
        "format:frontend": "cd frontend && npm run format",
        "format:backend": "cd backend && npm run format"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.43.0",
        "@typescript-eslint/parser": "^8.43.0",
        "concurrently": "^7.6.0",
        "eslint": "^9.35.0",
        "eslint-config-next": "^15.5.3"
    }
}